{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "declaration": true,
    "outDir": "./lib/esm",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
		"plugins": [
			{
				"transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
				"after": true,
			}
		]
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "**/*.test.ts", "**/__tests__/*"]
}